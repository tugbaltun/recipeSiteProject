@using (Html.BeginForm("YemekAra", "recipes", FormMethod.Post, new { htmlAttributes = new { @class = "navbar-search", }, enctype = "multipart/form-data" }))
{
    <div class="input-group" style="position:relative;float:left;margin-right:500px;margin-top:5px;">
        <input type="text" id="Ara" name="Ara" class="form-control bg-light border-0 small" placeholder="Ara..." aria-label="Ara" aria-describedby="basic-addon2">
        <div class="input-group-append">
            <button class="btn btn-primary" value="Ara" type="submit">
                Ara
                <span class="glyphicon glyphicon-search"></span>
            </button>
        </div>
    </div>
    <div class="form-group" style="position:relative;float:left;margin-left:350px;margin-top:-35px;">
        <select id="select2" name="Employee[]" class="selectpicker form-control" multiple data-live-search="true">
            <option>domates</option>
            <option>mercimek</option>
            <option>patates</option>
            <option>süt</option>
            <option>un</option>
            <option>margarin</option>
            <option>kakao</option>
        </select>

    </div>
    <div class="form-group" style="position:relative;float:left;margin-top:-55px;">
        <br />
        <button class="btn btn-primary" type="submit">Ara<span class="glyphicon glyphicon-search"></span></button>
    </div>

    <div class="form-group" style="position:relative;float:left;">
        <ul class="navbar-nav ic_bolme">

            <!-- Nav Item - Search Dropdown (Visible Only XS) -->


            @if (!User.Identity.IsAuthenticated)
            {
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/Index"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Ana sayfa </font></font><span class="sr-only"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">(şimdiki)</font></font></span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Recipes/Index"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Tarifler</font></font></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Login"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Üye Girişi</font></font></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Register"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Üye Ol</font></font></a>
                </li>
            }
            else
            {
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/Index"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Ana sayfa </font></font><span class="sr-only"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">(şimdiki)</font></font></span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Recipes/Index"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Tarifler</font></font></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/recipes/Create">Tarif Ekle </a>
                </li>
                <li class="nav-item dropdown no-arrow">
                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="mr-2 d-none d-lg-inline text-gray-600">@Session["user"]</span>
                        <img class="img-profile rounded-circle" src="~/Content/img/users/@Session["img"]">
                    </a>
                    <!-- Dropdown - User Information -->
                    <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" style="margin-top:-55px;" aria-labelledby="userDropdown">
                        <a class="dropdown-item" href="~/users/Details?id=@Session["uye_id"]">
                            Profili Görüntüle
                        </a>
                        <a class="dropdown-item" href="~/users/Edit?id=@Session["uye_id"]">
                            Profil Ayarları
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                            Çıkış Yap
                        </a>
                    </div>
                </li>
            }
        </ul>
    </div>


}

