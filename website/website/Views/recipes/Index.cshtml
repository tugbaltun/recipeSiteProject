@model IEnumerable<website.Models.recipes>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid  text-center">
    <h4 style="color:darkred">Tarifler</h4>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="bg-primary"></div>
            <div class="col-4" style="height:300px; background-color:white; margin:20px 0 0 0; padding:5px; border-color:white;border-style: solid; border-width: 5px;">
                <a href="~/recipes/Details?id=@item.id"><img src="~/Content/img/@item.image" style="width:80%; height:70%;" /></a>
                <a href="~/recipes/Details?id=@item.id"><h5 class="kutu1">@item.name</h5></a>
                <h5 class="kutu1">@item.users.name_sname</h5>
            </div>
            
        }
    </div>
</div>



